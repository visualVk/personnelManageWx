<!--pages/login/login.wxml-->
<view class="container">
    <view class="usernameBox">
        <image class="userPic" src="../../images/painting.png"/>
        <input class="usernameInput" bindinput="getUsername" value="{{user.username}}"></input>
    </view>
    <view class="passwordBox">
        <input class="passwordInput" type="password" bindinput="getPassword" value="{{user.password}}"></input>
    </view>
    <view class="loginBtn">
        <image class="loginPic" src="../../images/painting.png" bindtap="login"/>
    </view>
    <view class="bottom-bar">
        <view class="empty-box" bindtap="forgetPassword">忘记密码</view>
        <view class="empty-box">注册</view>
    </view>
</view>