/**app.wxss**/
.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
}

.page-bottom {
    height: 100%;
    width: 750rpx;
    position: fixed;
    background-color: #CCCCCC;
    z-index: 0;
}

.userPic {
}

.round {
    margin-top: 100rpx;
    margin-left: 100rpx;
    border-radius: 50rpx;
    width: 100rpx;
    height: 100rpx;
}

.wc {
    color: black;
    padding: 30rpx 0 30rpx 40rpx;
}

.page-content {
    padding-top: 100rpx;
}

.page-top {
    height: 100%;
    position: fixed;
    width: 750rpx;
    z-index: 0;
    background-color: #ffffff;
    transition: All0.4s ease;
    -webkit-transition: All0.4s ease;
}

.page-top image {
    position: absolute;
    width: 68rpx;
    height: 38rpx;
    left: 20rpx;
    top: 20rpx;
}

.text {
    margin-top: 10rpx;
    margin-left: 300rpx;
}

.topBar {
    display: inline-block;
    width: 100%;
    height: 75rpx;
    border-bottom: 1rpx solid#000000;
}

.c-state1 {
    transform: rotate(0deg) scale(1) translate(75%, 0%);
    -webkit-transform: rotate(0deg) scale(1) translate(75%, 0%);
}

.c-state2 {
    transform: rotate(0deg) scale(.8) translate(75%, 0%);
    -webkit-transform: rotate(0deg) scale(.8) translate(75%, 0%);
}